    "version": "2.0.0",
    "tasks": [
        {
            "label": "build nachos",
            "type": "shell",
            "command": "cd build.linux&&make clean&&make nachos",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "clean nachos",
            "type": "shell",
            "command": "cd build.linux&&make clean"
        },
        {
            "label": "build dep",
            "type": "shell",
            "command": "cd build.linux&&make distclean&&make depend"
        },
        {
            "label": "usrprog",
            "type": "shell",
            "command": "cd test&&make"
        },
        {
            "label": "clean usrprog",
            "type": "shell",
            "command": "cd test&&make clean&&make distclean"
        },
        {
            "label": "run nachos",
            "type": "shell",
            "command": "build.linux/nachos -Q 5000 -x test/task1 -x test/test2 -x test/sort -x test/matmult",
            "problemMatcher": []
        }
    ]
}